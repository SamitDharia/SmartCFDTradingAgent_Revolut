# Copy to .env and fill in your keys locally (do not commit your real .env)
TIMEZONE=Europe/Dublin
ALPACA_ENV=paper
ALPACA_API_KEY_ID=your_key_here
ALPACA_API_SECRET_KEY=your_secret_here

# Network resiliency
API_TIMEOUT_SECONDS=10
NETWORK_MAX_BACKOFF_SECONDS=60
ON_RECONNECT_RECONCILE=true

# Safety and behavior toggles
ORDER_CLIENT_ID_PREFIX=SCFD
OFFLINE_BEHAVIOR=halt
RUN_CONTAINER_SMOKE_TEST=1
# Alpaca API keys (optional for authenticated health check)
# APCA_API_KEY_ID=your_key_id
# APCA_API_SECRET_KEY=your_secret
